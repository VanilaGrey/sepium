{% with image %}
	<picture>
		{% if webp %}
			<source
				type="image/webp"
				{{ webpTablet or webpMobile ? 'media="(min-width: 1200px)"' }}
				srcset="{{ webp }} 1x{{ webp2x ? ', ' ~ webp2x ~ ' 2x' }}"
			/>
		{% endif %}

		<img
			{{ className ? 'class="' ~ className ~ '"' }}
			src="{{ default }}"
			{{ default2x ? 'srcset="' ~ default2x ~ ' 2x"' }}
			alt="{{ alt }}"
			{{ not alt ? 'aria-hidden="true"' }}
			{{ not immediately ? 'loading="lazy"' }}
		/>
	</picture>
{% endwith %}
